#set($domainName = $domain.getName())
#set($baseViewUrl = $domain.getModule() + "/" + $domainName)
#set($baseUrl = "/" + $baseViewUrl)
#set($formUrl = $baseUrl + "/")
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
      xmlns:yq="http://www.yqboots.com" xmlns="http://www.w3.org/1999/xhtml" layout:decorator="layouts/layout">
<head>
  <title th:text="Domain Management">Domain Management</title>
  <link rel="stylesheet" href="../../../META-INF/resources/theme/application.css" th:remove="all"/>
  <link rel="stylesheet" href="../../../META-INF/resources/theme/css/theme-colors/green.css" th:remove="all"/>
  <link rel="stylesheet" href="../../../META-INF/resources/dojo/jquery/skyforms/css/sky-forms.css" th:remove="all"/>
  <link rel="stylesheet" href="../../../META-INF/resources/dojo/jquery/skyforms/custom/custom-sky-forms.css"
        th:remove="all"/>
</head>
<body>
<div layout:fragment="breadcrumbs">
  <yq:breadcrumbs menu="$domainName"/>
</div>
<div layout:fragment="content" class="content content-sm height-600">
  <div class="container">
    <form class="sky-form" action="#" th:action="@{$formUrl}" th:object="${model}" method="post">
      <input type="hidden" th:field="*{id}"/>
      <header th:text="Domain Maintenance Form">Domain Maintenance Form</header>
      <fieldset>
#foreach($item in $domain.getProperties())
        <section>
          <label class="label" th:text="$item.getClassField()">$item.getClassField()</label>
          <label class="input">
            <input type="text" th:field="*{$item.getClassField()}" th:errorclass="state-error"/>
          </label>

          <p th:if="${#fields.hasErrors('$item.getClassField()')}" th:errors="*{$item.getClassField()}"></p>
        </section>
#end
      </fieldset>
      <footer>
        <button type="submit" class="btn-u" th:text="#{T0012}">Submit</button>
        <button type="reset" class="btn-u" th:text="#{T0013}">Reset</button>
      </footer>
    </form>
  </div>
</div>
<script src="../../../META-INF/resources/dojo/jquery.js" th:remove="all"></script>
<script src="../../../META-INF/resources/dojo/bootstrap.js" th:remove="all"></script>
</body>
</html>